{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!**/.next", "!**/node_modules", "!**/coverage"]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
